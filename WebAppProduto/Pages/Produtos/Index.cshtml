@page
@model WebAppProduto.Pages.Produtos.IndexModel
@{
}
<div class="container">
    <div>
        <h1 class="text-md-left">
            Estoque
        </h1>
        <div class="col-lg-12" style="text-align: left; padding-bottom: 1.5rem;">
            <a class="btn btn-outline-success"
               asp-area="" asp-page="/Produtos/Create">Novo Produto</a>
            <a class="btn btn-outline-dark"
               asp-area="" asp-page="/Produtos/Create">Movimentar Produto</a>
        </div>


    </div>
    <section class="d-flex">

        <div class="card shadow col-lg-12">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Produtos</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>Setor</th>
                                <th>Fornecedor</th>
                                <th>Local</th>
                                <th>Quantidade</th>
                                <th>Gestão</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                            @foreach (var data in Model.Produtos)
                            {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => data.ID)</td>
                            <td>@Html.DisplayFor(modelItem => data.nome)</td>
                            <td>@Html.DisplayFor(modelItem => data.tipo)</td>
                            <td>@Html.DisplayFor(modelItem => data.setor)</td>
                            <td>@Html.DisplayFor(modelItem => data.fornecedor)</td>
                            <td>@Html.DisplayFor(modelItem => data.local)</td>
                            <td>@Html.DisplayFor(modelItem => data.quantidade)</td>
                            <td alig-right>
                                <a class="pencil"
                                   asp-page="/Produtos/Edit"
                                   asp-route-id="@data.ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                    </svg>
                                </a>
                            </td>
                            <td alig-right>
                                <a class="bi bi-x-circle-fill"
                                   asp-page="/Produtos/Delete"
                                   asp-route-id="@data.ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                     </tbody>
                              }
                    </table>
                </div>
            </div>
         </div>
     </section>
</div>






